<% include ../partials/header %>

<div class="container">
    <div class="card mt-5">
        <div class="card-header text-center">
            Edit <%= campground.name %>
        </div>
        <div class="card-body">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]" required>
                </div>
                <div class="btn-group d-flex justify-content-end" role="group" aria-label="edit buttons">
                    <div class="inline btn-group">
                        <button class="btn btn-xs btn-primary py-1">Submit</button>
                    </div>
                    <div class="inline btn-group">
                        <a class="btn btn-xs btn-warning py-1" href="/campgrounds/<%= campground._id %>">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>