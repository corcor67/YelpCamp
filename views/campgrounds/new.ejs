<% include ../partials/header %>

<div class="container">
    <div class="card mt-5">
        <div class="card-header text-center">
            Create a New Campground
        </div>
        <div class="card-body">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" placeholder="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="price">Price per night</label>
                    <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="image">Photograph</label>
                    <input class="form-control" type="text" placeholder="image url" name="image" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" placeholder="description" name="description" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>